--// GAG-Style Auto Trade (Safe Simulation)
--// For your own local testing and UI structure

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Simulated GameEvents
local GameEvents = ReplicatedStorage:FindFirstChild("GameEvents") or Instance.new("Folder")
GameEvents.Name = "GameEvents"
GameEvents.Parent = ReplicatedStorage

local Trade_RE = GameEvents:FindFirstChild("Trade_RE") or Instance.new("RemoteEvent", GameEvents)
Trade_RE.Name = "Trade_RE"
local GiftPet_RE = GameEvents:FindFirstChild("GiftPet_RE") or Instance.new("RemoteEvent", GameEvents)
GiftPet_RE.Name = "GiftPet_RE"
local TradeHandler = GameEvents:FindFirstChild("TradeHandler") or Instance.new("RemoteEvent", GameEvents)
TradeHandler.Name = "TradeHandler"

-- Simple notification
local function notify(msg)
	print("[AutoTrade] " .. msg)
end

--// UI Setup
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "GAG_AutoTradeUI"
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.fromOffset(340, 380)
Frame.Position = UDim2.new(0.5, -170, 0.5, -190)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Active, Frame.Draggable = true, true
Instance.new("UICorner", Frame).CornerRadius = UDim.new(0,12)

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1,0,0,30)
Title.Text = "Grow a Garden Auto Trade (Simulated)"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16
Title.TextColor3 = Color3.new(1,1,1)
Title.BackgroundTransparency = 1

local Status = Instance.new("TextLabel", Frame)
Status.Size = UDim2.new(1,-20,0,20)
Status.Position = UDim2.new(0,10,1,-30)
Status.BackgroundTransparency = 1
Status.Font = Enum.Font.Gotham
Status.TextSize = 14
Status.TextColor3 = Color3.new(1,1,1)
Status.Text = "Status: Idle"

local startBtn = Instance.new("TextButton", Frame)
startBtn.Size = UDim2.new(1,-20,0,36)
startBtn.Position = UDim2.new(0,10,1,-70)
startBtn.Text = "Start Simulated Trade"
startBtn.Font = Enum.Font.GothamBold
startBtn.TextSize = 16
startBtn.TextColor3 = Color3.new(1,1,1)
startBtn.BackgroundColor3 = Color3.fromRGB(70,70,70)
Instance.new("UICorner", startBtn).CornerRadius = UDim.new(0,8)

--// Core logic (simulated)
local function simulateTrade(version)
	local backpack = LocalPlayer:FindFirstChildOfClass("Backpack")
	if not backpack then return end
	for _, item in ipairs(backpack:GetChildren()) do
		if item:IsA("Tool") and item:FindFirstChild("Pet Local Script") then
			if version == 1 then
				notify("Trade_RE simulated: "..item.Name)
			elseif version == 2 then
				notify("GiftPet_RE simulated: "..item.Name)
			else
				notify("TradeHandler simulated: "..item.Name)
			end
			task.wait(0.4)
		end
	end
	Status.Text = "Status: Finished simulation ("..version..")"
end

-- buttons to pick version
for i = 1,3 do
	local btn = Instance.new("TextButton", Frame)
	btn.Size = UDim2.new(1,-20,0,32)
	btn.Position = UDim2.new(0,10,0,40 + (i-1)*36)
	btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
	btn.TextColor3 = Color3.new(1,1,1)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.Text = "Try Version "..i
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0,6)
	btn.MouseButton1Click:Connect(function()
		Status.Text = "Status: Simulating v"..i
		simulateTrade(i)
	end)
end

startBtn.MouseButton1Click:Connect(function()
	Status.Text = "Status: Starting all versions..."
	for v=1,3 do simulateTrade(v) end
end)

notify("UI ready. Choose version 1â€“3 to simulate trade behavior.")
